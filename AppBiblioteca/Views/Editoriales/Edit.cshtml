@model AppBiblioteca.Models.Editoriales

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Editorial</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EditorialID)

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.EditorialNombre, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.EditorialNombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EditorialNombre, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-outline-danger" href="/Editoriales/Index"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Atras</a>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
