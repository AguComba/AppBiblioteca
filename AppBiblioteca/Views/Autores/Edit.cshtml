@model AppBiblioteca.Models.Autores

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Autor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AutoresID)

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.AutoresNombre, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.AutoresNombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AutoresNombre, "", new { @class = "text-danger" })
            </div>




            <div class="col-md-6">
                @Html.LabelFor(model => model.AutoresApellido, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.AutoresApellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AutoresApellido, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>

        </div>
        
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-outline-danger" href="/Autores/Index"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Atras</a>
        </div>

    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
